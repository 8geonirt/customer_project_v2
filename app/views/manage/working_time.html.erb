<h1 class="title">Working Time</h1>
<h4>
  <label class="label label-<%=@working_time[:total_worked][:total_worked] < 8 ? 'warning':'success' %>">Hours worked: <%= @working_time[:total_worked][:total_worked] %></label>
</h4>
<table id="working_hrs_tbl" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th class="col-xs-2">Date</th>
      <th>Hour</th>
    </tr>
  </thead>
  <tbody>
    <% @working_time[:worked_days].each do |v| %>
        <tr>
          <td><%= v.date.strftime("%F") %></td>
          <td><%= v.date.strftime("%I:%M %p") %></td>
        </tr>
    <% end %>
  </tbody>
</table>
