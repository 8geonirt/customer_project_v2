<%= form_for @employee,url:@employee.id ? manage_path : manage_index_path, html: {class:"form-horizontal"} do |f| %>
  <div class="form-group">
    <%=label_tag :first_name, "First Name", {class: "col-sm-2 control-label"} %>
    <div class="col-sm-8">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%=label_tag :last_name, "Last Name", {class: "col-sm-2 control-label"} %>
    <div class="col-sm-8">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%=label_tag :address, "Address", {class: "col-sm-2 control-label"} %>
    <div class="col-sm-8">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%=label_tag :email, "Email", {class: "col-sm-2 control-label"} %>
    <div class="col-sm-8">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%=label_tag :phone_number, "Phone Number", {class: "col-sm-2 control-label"} %>
    <div class="col-sm-8">
      <%= f.text_field :phone_number, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= button_tag 'Save', data: { disabling_with: "Saving..."},class: "btn btn-primary btn-lg" %>
    </div>
  </div>
<% end %>
